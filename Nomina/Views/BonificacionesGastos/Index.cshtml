                    <th>Monto</th>
                    <th>Concepto</th>
                    <th>Fecha</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@ViewBag.Empleados[item.empleadoId]</td>
                        <td>@item.monto</td>
                        <td>@item.concepto</td>
                        <td>@item.fecha.ToString("dd/MM/yyyy")</td>
                        <td>
