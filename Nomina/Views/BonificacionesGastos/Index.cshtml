@model IEnumerable<Nomina.Entities.DTOs.BonificacionDeGastoDTO>
@using Nomina.Entities.DTOs;
@{
    ViewData["Title"] = "Bonificación";


}
    <section class="shadow" id="shadow"></section>

<h1 class="color-engine py-1 text-center"><b>Bonificación de gastos</b></h1>

<section class="bg-light text-center w-97 rounded-5 m-auto h-88 table-cont">
