                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Empleado</th>
                    <th>Monto</th>
                    <th>Concepto</th>
                    <th>Fecha</th>
                    <th>Acción</th>
                </tr>
            </tfoot>
        </table>
    </article>

    
</section>

<!-- Create Modal -->
<article class="form container tex-center" id="modalCreate">

    <div class="row justify-content-end p">
        <span id="closeBonificacion" class="close">&times;</span>
    </div>

    <h3><b>Nueva bonificación</b></h3>

    <div class="row mt-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="createEmpleadoID"><b>Empleado</b></label><br />
                <select class="form-imput" id="createEmpleadoID" name="empleadoId" required>
                    @foreach (var empleado in ViewBag.Empleados)
                    {
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="createSalarioSem"><b>Monto</b></label><br />
                <input type="text" class="form-imput" id="createSalarioSem"required>
            </div>
            
            <div class="form-group">
                <label for="createSalarioSem"><b>Concepto</b></label><br />
                <input type="text" class="form-imput" id="createSalarioSem"required>
            </div>



            <div class="form-group">
                <label for="createFechaIngreso"><b>Fecha</b></label><br />
                <input type="date" class="form-imput" id="createFechaIngreso" required>
            </div>

            <button type="submit" class="submit my-3">Confirmar</button>

        </form>

    </div>

</article>

<article class="form container tex-center" id="editar">

    <div class="row justify-content-end p">
        <span id="closeEdit" class="close">&times;</span>
    </div>

    <h3><b>Editar empleo</b></h3>

    <div class="row mt-4">


    </div>

</article>


@section Scripts {
